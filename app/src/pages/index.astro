<style>
	/* DESIGN NEON / TERMINAL CONSERV√â */
	@import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap');

	:root {
		--bg-color: #0a0f1e;
		--text-color: #e2e8f0;
		--accent: #00d4ff; /* Bleu N√©on */
		--accent-dark: #0ea5e9;
		--card-bg: #1a2332;
		--border-color: #2d3748;
	}

	main {
		background: linear-gradient(135deg, var(--bg-color) 0%, #1a1f3a 100%);
		color: var(--text-color);
		font-family: 'JetBrains Mono', 'Courier New', monospace;
		min-height: 100vh;
		display: flex;
		justify-content: center;
		padding: 2rem 1rem;
		line-height: 1.6;
	}

	.container {
		max-width: 900px;
		width: 100%;
	}

	.hero {
		padding: 5rem 0 3rem;
		text-align: center;
		border-bottom: 1px solid var(--border-color);
	}

	.badge {
		background: linear-gradient(45deg, var(--accent-dark), var(--accent));
		color: white;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.5rem 1.25rem;
		border-radius: 50px;
		font-size: 0.85rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		box-shadow: 0 4px 12px rgba(0, 212, 255, 0.3);
		animation: pulse 2s infinite;
	}

	@keyframes pulse {
		0%, 100% { opacity: 1; }
		50% { opacity: 0.8; }
	}

	h1 {
		font-size: clamp(2.5rem, 5vw, 4rem);
		margin: 0 0 0.5rem;
		line-height: 1.1;
		font-weight: 700;
		letter-spacing: -0.02em;
	}

	.text-gradient {
		background: linear-gradient(45deg, var(--accent), #a855f7);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.role-title {
		font-size: clamp(1.2rem, 3vw, 1.6rem);
		color: #94a3b8;
		margin: 0 0 1.5rem;
		font-weight: 400;
	}

	.exp-badge {
		font-size: 0.8rem;
		color: var(--accent);
		border: 1px solid var(--accent);
		padding: 2px 8px;
		border-radius: 4px;
		margin-left: 10px;
		vertical-align: middle;
	}

	.bio {
		font-size: 1.15rem;
		max-width: 650px;
		margin: 0 auto 2.5rem;
		opacity: 0.9;
	}

	.socials {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 1rem;
		margin-top: 1rem;
	}

	.btn-social {
		background: var(--card-bg);
		color: var(--text-color);
		text-decoration: none;
		padding: 0.9rem 1.8rem;
		border-radius: 12px;
		border: 1.5px solid var(--border-color);
		font-weight: 500;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		backdrop-filter: blur(10px);
	}

	.btn-social:hover {
		border-color: var(--accent);
		background: rgba(0, 212, 255, 0.1);
		color: var(--accent);
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(0, 212, 255, 0.2);
	}

	.section-subtitle {
		text-align: center;
		color: #94a3b8;
		margin-bottom: 2rem;
	}

	h3 {
		font-size: 1.8rem;
		margin-bottom: 1rem;
		text-align: center;
		position: relative;
	}

	h3::after {
		content: '';
		display: block;
		width: 60px;
		height: 3px;
		background: var(--accent);
		margin: 0.5rem auto 0;
		border-radius: 2px;
	}

	.grid, .project-grid {
		display: grid;
		gap: 1.5rem;
	}
	
	.grid {
		grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
	}

	.project-grid {
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
	}

	.card, .project-card {
		background: var(--card-bg);
		padding: 1.75rem 1.25rem;
		border-radius: 16px;
		text-align: center;
		border: 1.5px solid var(--border-color);
		transition: all 0.3s ease;
		backdrop-filter: blur(12px);
	}

	.card:hover, .project-card:hover {
		border-color: var(--accent);
		transform: translateY(-4px);
		box-shadow: 0 20px 40px rgba(0, 212, 255, 0.15);
	}

	.project-card {
		text-align: left;
		padding: 2rem;
	}

	.project-card h4 {
		color: var(--accent);
		font-size: 1.2rem;
		margin: 0 0 0.5rem 0;
	}

	.tech-stack {
		font-size: 0.85rem;
		color: #94a3b8;
		font-family: 'JetBrains Mono', monospace;
		margin-bottom: 1rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.project-details {
		text-align: left;
		margin: 1rem 0 0 0;
		padding-left: 1.2rem;
		color: #cbd5e1;
		font-size: 0.95rem;
	}
	
	.project-details li {
		margin-bottom: 0.5rem;
	}

	.icon {
		font-size: 1.8rem;
		display: block;
		margin-bottom: 0.75rem;
	}

	@media (max-width: 768px) {
		h1 { font-size: 2.5rem; }
		.btn-social { width: 100%; justify-content: center; }
	}
</style>