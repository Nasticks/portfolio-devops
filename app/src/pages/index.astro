<style>
	/* POLICE TECHNIQUE MAIS PRO */
	@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=JetBrains+Mono:wght@400;700&display=swap');

	:root {
		--bg-dark: #0f172a;
		--card-dark: #1e293b;
		--text-main: #f1f5f9;
		--text-muted: #94a3b8;
		--accent: #38bdf8; /* Bleu ciel pro */
		--border: #334155;
	}

	main {
		background-color: var(--bg-dark);
		color: var(--text-main);
		font-family: 'Inter', sans-serif;
		min-height: 100vh;
		padding: 4rem 1rem;
		line-height: 1.6;
	}

	.container {
		max-width: 800px;
		margin: 0 auto;
	}

	/* HERO SECTION */
	.hero {
		margin-bottom: 4rem;
	}

	h1 {
		font-family: 'JetBrains Mono', monospace;
		font-size: 3rem;
		margin: 0.5rem 0;
		letter-spacing: -1px;
	}

	.role-title {
		font-size: 1.5rem;
		color: var(--accent);
		font-weight: 600;
		margin-bottom: 1.5rem;
		display: flex;
		align-items: center;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.exp-badge {
		background: rgba(56, 189, 248, 0.1);
		color: var(--accent);
		font-size: 0.8rem;
		padding: 4px 10px;
		border-radius: 4px;
		border: 1px solid rgba(56, 189, 248, 0.2);
	}

	.badge-status {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		background: #14532d;
		color: #4ade80;
		padding: 4px 12px;
		border-radius: 99px;
		font-size: 0.75rem;
		font-weight: bold;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.status-dot {
		width: 8px;
		height: 8px;
		background-color: #4ade80;
		border-radius: 50%;
		display: block;
		box-shadow: 0 0 8px #4ade80;
	}

	.bio {
		font-size: 1.125rem;
		color: var(--text-muted);
		max-width: 650px;
	}

	/* SOCIALS */
	.socials {
		margin-top: 2rem;
		display: flex;
		gap: 1rem;
	}

	.btn-social {
		background: var(--card-dark);
		color: var(--text-main);
		text-decoration: none;
		padding: 0.6rem 1.2rem;
		border-radius: 6px;
		border: 1px solid var(--border);
		font-size: 0.9rem;
		font-weight: 600;
		transition: all 0.2s;
	}

	.btn-social:hover {
		border-color: var(--accent);
		color: var(--accent);
	}

	/* SECTIONS */
	.section-block {
		margin-bottom: 4rem;
	}

	h3 {
		font-size: 1.25rem;
		font-weight: 800;
		margin-bottom: 0.5rem;
		color: var(--text-main);
		border-left: 4px solid var(--accent);
		padding-left: 1rem;
	}

	.section-subtitle {
		color: var(--text-muted);
		font-size: 0.9rem;
		margin-bottom: 1.5rem;
		padding-left: 1.2rem;
	}

	/* SKILLS GRID */
	.grid {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
	}

	.skill-tag {
		background: var(--card-dark);
		border: 1px solid var(--border);
		padding: 0.5rem 1rem;
		border-radius: 4px;
		font-family: 'JetBrains Mono', monospace;
		font-size: 0.85rem;
		color: var(--text-main);
	}

	/* PROJECTS */
	.project-grid {
		display: grid;
		gap: 1.5rem;
	}

	.project-card {
		background: var(--card-dark);
		border: 1px solid var(--border);
		padding: 1.5rem;
		border-radius: 8px;
	}

	.project-card.featured {
		border-color: var(--accent);
